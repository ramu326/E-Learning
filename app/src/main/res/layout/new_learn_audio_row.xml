<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/new_learn_video_card_view"
    android:layout_width="175dp"
    android:layout_height="155dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/image_corners_shape"
    android:backgroundTint="#ffffff"
    android:paddingVertical="6dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_grid_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/drwomen"
        app:layout_constraintTop_toBottomOf="@id/tv_grid_text_dec"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/tv_grid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/yantramanav_medium"
        android:paddingRight="24dp"
        android:text="General medicine"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/tv_grid_text_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/yantramanav"
        android:paddingRight="4dp"
        android:drawableLeft="@drawable/ic_dot"
        android:drawableTint="@color/green"
        android:text=" 36 Listened"
        android:textAllCaps="false"
        android:textColor="#979797"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_grid_text"
        app:layout_constraintTop_toBottomOf="@id/tv_grid_text"></TextView>


    <TextView
        android:id="@+id/tv_watched"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/yantramanav"
        android:text=" 150 Audios"
        android:drawableLeft="@drawable/ic_dot"
        android:drawableTint="@color/orange"
        android:textColor="#979797"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_grid_text_dec"
        app:layout_constraintTop_toBottomOf="@id/tv_grid_text_dec"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>