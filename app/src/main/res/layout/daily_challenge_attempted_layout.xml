<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fceff3"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/dcal_rl_one"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:backgroundTint="@color/black"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/iv_dcal_bulb"
            android:background="@drawable/ic_back_black"></ImageView>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:id="@+id/iv_dcal_bulb"
            android:background="@drawable/bulb_img">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_dcal_dc"
            android:text="Daily \n Challenge Quiz"
            android:layout_toRightOf="@id/iv_dcal_bulb"
            android:textColor="@color/blue"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_marginLeft="24dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"></TextView>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="26dp"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_dcal_cal"
            android:layout_marginRight="24dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/black"
            android:background="@drawable/ic_calendar">
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Your Score :"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:textSize="18sp"
            android:id="@+id/tv_dcal_score_text"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7 / 10 Mcq's"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:layout_toRightOf="@id/tv_dcal_score_text"
            android:id="@+id/tv_dcal_score"></TextView>
        <ImageView
            android:layout_width="30dp"
            android:background="@drawable/ic_bookmark"
            android:backgroundTint="@color/black"
            android:layout_alignParentRight="true"
            android:layout_height="32dp"></ImageView>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/ll_rlr_marks_layout"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_below="@id/relativeLayout2"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_bold">

            </TextView>

        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@color/lightblack"></View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/green"
                android:fontFamily="@font/roboto_regular">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correct"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/red"
                android:fontFamily="@font/roboto_regular">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Correct"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/orange"
                android:fontFamily="@font/roboto_regular">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skipped"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/lightblack"
                android:fontFamily="@font/roboto_regular">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Viewed"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular">

            </TextView>

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            card_view:cardElevation="10dp"
            android:background="@color/barcolor"
            android:layout_gravity="center"
            card_view:cardUseCompatPadding="true"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dcal_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/barcolor" />


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="1)"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:id="@+id/tv_fdc_num"
            android:fontFamily="@font/roboto_bold"
            android:textAllCaps="true"
            android:textAlignment="textStart"
            android:layout_height="wrap_content"
            android:gravity="start"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="Which of the following is an A Typical vitamin?"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/tv_fdc_num"
            android:id="@+id/tv_fdc_question"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:layout_height="wrap_content"
            android:gravity="start"></TextView>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/card_back"
        android:foreground="?android:attr/selectableItemBackground"
        android:outlineAmbientShadowColor="@color/black"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        >

        <RelativeLayout
            android:id="@+id/fdc_relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tv_fdc_op_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="a)"
                android:textColor="@color/black"
                android:layout_marginLeft="16dp"
                android:textAllCaps="false"
                android:textSize="14sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/tv_fdc_op_a"
                android:fontFamily="@font/roboto_bold"
                android:text=" Vitamin B1"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textSize="14sp"></TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/card_back"
        android:foreground="?android:attr/selectableItemBackground"
        android:outlineAmbientShadowColor="@color/black"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        >

        <RelativeLayout
            android:id="@+id/fdc_relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tv_fdc_op_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="b)"
                android:textColor="@color/black"
                android:layout_marginLeft="16dp"
                android:textAllCaps="false"
                android:textSize="14sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/tv_fdc_op_b"
                android:fontFamily="@font/roboto_bold"
                android:text=" Vitamin B1"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textSize="14sp"></TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/card_back"
        android:foreground="?android:attr/selectableItemBackground"
        android:outlineAmbientShadowColor="@color/black"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        >

        <RelativeLayout
            android:id="@+id/fdc_relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tv_fdc_op_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="c)"
                android:textColor="@color/black"
                android:layout_marginLeft="16dp"
                android:textAllCaps="false"
                android:textSize="14sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/tv_fdc_op_c"
                android:fontFamily="@font/roboto_bold"
                android:text=" Vitamin B1"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textSize="14sp"></TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/card_back"
        android:foreground="?android:attr/selectableItemBackground"
        android:outlineAmbientShadowColor="@color/black"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        >

        <RelativeLayout
            android:id="@+id/fdc_relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tv_fdc_op_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="d)"
                android:textColor="@color/black"
                android:layout_marginLeft="16dp"
                android:textAllCaps="false"
                android:textSize="14sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/tv_fdc_op_d"
                android:fontFamily="@font/roboto_bold"
                android:text=" Vitamin B1"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textSize="14sp"></TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="12dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explanation:"
                android:textAlignment="textStart"
                android:gravity="start"
                android:id="@+id/tv_dcal_explanation"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold"
                android:textSize="16sp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_below="@id/tv_dcal_explanation"
                android:text="It's been a season of far more misses than hits for CSK, but the epicentre of this despairing sentiment can be traced back to how they've repeatedly failed to boss games through their grip on the conditions."
                android:textSize="14sp"
                android:textColor="@color/black"
                android:lineHeight="16dp"
                android:textAlignment="textStart"
                android:gravity="start"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_regular"
                android:layout_height="wrap_content"></TextView>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>