<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/barcolor"
        android:paddingVertical="16dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anatomy"
            android:textStyle="normal"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            android:background="@color/barcolor"
            android:gravity="center"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Introduction to human body"
            android:textStyle="normal"
            android:paddingVertical="8dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_bold"
            android:background="@color/barcolor"
            android:gravity="center"
            ></TextView>
    </LinearLayout>




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:outlineAmbientShadowColor="@color/black"
        android:background="@drawable/card_back"
        card_view:cardUseCompatPadding="true"
        app:cardElevation="20dp"
        android:id="@+id/card_view_slove_exam"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="start|center"
            android:gravity="start|center"
            android:paddingVertical="24dp"
            android:layout_marginLeft="32dp"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 mcq's"
                android:textStyle="normal"
                android:id="@+id/mcqs"
                android:textAllCaps="true"
                android:textColor="#404040"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_medium"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 completed"
                android:layout_below="@id/mcqs"
                android:textStyle="normal"
                android:id="@+id/comple"
                android:visibility="gone"
                android:textAllCaps="false"
                android:textColor="@color/lightblack"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_bold"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 4.5"
                android:layout_marginTop="6dp"
                android:drawableLeft="@drawable/ic_star"
                android:drawableTint="#8c8c8c"
                android:layout_below="@id/comple"
                android:textStyle="normal"
                android:textAllCaps="true"
                android:textColor="#8c8c8c"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:paddingVertical="6dp"
                android:paddingHorizontal="24dp"
                android:layout_height="wrap_content"
                android:id="@+id/swt_tv_slove"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:drawableRight="@drawable/ic_forward"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_bold"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/green"
                android:background="@drawable/btn_bg"
                android:text="Solve  "
                android:layout_alignParentRight="true"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:paddingVertical="6dp"
                android:paddingHorizontal="24dp"
                android:layout_height="wrap_content"
                android:id="@+id/swt_tv_resume"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:visibility="gone"
                android:drawableRight="@drawable/ic_forward"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_bold"
                android:layout_centerInParent="true"
                android:backgroundTint="#d17318"
                android:background="@drawable/btn_bg"
                android:text="Resume  "
                android:layout_alignParentRight="true"></TextView>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:outlineAmbientShadowColor="@color/black"
        android:background="@drawable/card_back"
        card_view:cardUseCompatPadding="true"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="start|center"
            android:gravity="start|center"
            android:paddingVertical="24dp"
            android:layout_marginHorizontal="32dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/ic_bookmark"
                android:drawableTint="@color/black"
                android:text=" 10 bookmarks"></TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/black"
                android:background="@drawable/ic_arrow_forward"></ImageView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:outlineAmbientShadowColor="@color/black"
        android:background="@drawable/card_back"
        card_view:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="start|center"
            android:gravity="start|center"
            android:paddingVertical="24dp"
            android:layout_marginHorizontal="32dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:drawableTint="@color/black"
                android:drawableLeft="@drawable/ic_error_skipped"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text=" 20 Errors (Wrong+Skipped)"></TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/black"
                android:background="@drawable/ic_arrow_forward"></ImageView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>