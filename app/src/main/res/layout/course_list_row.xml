<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/con_medical_pg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:background="@drawable/black_line_shape"
    android:paddingVertical="6dp"
    android:layout_marginHorizontal="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_choose"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:paddingLeft="12dp"
        android:id="@+id/tv_medical_pg"
        android:text="Medical PG"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <RadioButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:buttonTint="@color/barcolor"
        android:paddingRight="12dp"
        android:id="@+id/radio_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></RadioButton>
</androidx.constraintlayout.widget.ConstraintLayout>