<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:layout_marginVertical="20dp"
    android:layout_marginHorizontal="16dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    android:outlineAmbientShadowColor="@color/black"
    android:background="@drawable/card_back"
    android:backgroundTint="@color/white"
    android:layout_marginLeft="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2FFAD02C"
        android:background="@drawable/ll_bg_tv_bt"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="start|center"
            android:adjustViewBounds="true"
            android:src="@drawable/goldg"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:paddingVertical="8dp"
        android:id="@+id/linear_layout_test_discussion"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pre-clinical grand Test"
            android:textSize="16sp"
            android:letterSpacing="0.02"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_horizontal">
        </TextView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="180 cqs"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:id="@+id/test_discussion_mcqs"
                android:letterSpacing="0.02"
                android:textColor="#8c8c8c"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_horizontal">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="180 Mins"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/test_discussion_mcqs"
                android:textSize="14sp"
                android:letterSpacing="0.02"
                android:textColor="#8c8c8c"
                android:fontFamily="@font/roboto_regular"
                >
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Syllabus :"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:id="@+id/test_discussion_syllabus"
                android:letterSpacing="0.02"
                android:textColor="#8c8c8c"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_horizontal">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anatomy,physiology"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/test_discussion_syllabus"
                android:textSize="14sp"
                android:letterSpacing="0.02"
                android:textColor="#8c8c8c"
                android:fontFamily="@font/roboto_regular">
            </TextView>
        </RelativeLayout>
