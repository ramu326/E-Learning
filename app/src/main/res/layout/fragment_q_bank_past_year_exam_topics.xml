<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.QBankPastYearExamTopicsFragment">
<ProgressBar
    android:layout_width="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:id="@+id/progress_past_year"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_height="wrap_content"></ProgressBar>
<TextView
    android:layout_width="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="Anatomy"
    android:paddingVertical="20dp"
    android:gravity="center"
    android:background="@color/barcolor"
    android:textSize="18sp"
    android:fontFamily="@font/yantramanav_medium"
    android:textColor="@color/white"
    android:id="@+id/past_sub_name"
    android:layout_height="wrap_content"></TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rec_qbank_past_year_topics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/past_sub_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>