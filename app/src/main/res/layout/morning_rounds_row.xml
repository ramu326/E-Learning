<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="8dp"
    android:id="@+id/orning_rounds_card_view"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/dis_image"></ImageView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:paddingHorizontal="16dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="65 years -old man presents with histroy of multiple falls,unstable wide gait and retropulsion"
                android:textSize="16dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingBottom="4dp"
                android:id="@+id/tv_dis_video_name"
                android:lineHeight="20dp"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_regular"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Syllabus: "
                android:textSize="12dp"
                android:layout_below="@id/tv_dis_video_name"
                android:layout_marginTop="6dp"
                android:id="@+id/tv_dis_video_syllabus"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_regular"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anatomy "
                android:textSize="12dp"
                android:layout_toRightOf="@id/tv_dis_video_syllabus"
                android:layout_below="@id/tv_dis_video_name"
                android:layout_marginTop="6dp"
                android:id="@+id/tv_dis_video_syllabus_name"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_medium"></TextView>
        </RelativeLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>
