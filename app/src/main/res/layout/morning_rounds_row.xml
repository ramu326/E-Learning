<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="8dp"
    android:background="@drawable/tab_unselect_bg"
    android:orientation="horizontal"
  >
    <ImageView
        android:layout_width="150dp"
        android:src="@drawable/mornig_image_main"
        android:layout_height="100dp"></ImageView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:textAlignment="textStart"
            android:gravity="start"
            android:lineHeight="24dp"
            android:id="@+id/tv_title"
            android:textSize="16sp"
            android:layout_marginTop="18dp"
            android:textColor="#4d4d4d"
            android:layout_marginHorizontal="12dp"
            android:text="This guide to the letters."
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textAlignment="center"
            android:gravity="bottom"
            android:layout_below="@id/tv_title"
            android:lineHeight="24dp"
            android:id="@+id/tv_sub_name"
            android:textSize="12sp"
            android:paddingTop="16dp"
            android:textColor="@color/barcolor"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="8dp"
            android:text="@string/obstetrics_gynaecology"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat"></TextView>
    </RelativeLayout>


</LinearLayout>