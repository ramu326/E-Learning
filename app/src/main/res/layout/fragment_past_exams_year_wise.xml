<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.PastExamsYearWiseFragment">
<ProgressBar
    android:layout_width="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:id="@+id/pro_past_exam"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_height="wrap_content"></ProgressBar>
   <TextView
       android:layout_width="match_parent"
       android:textSize="20sp"
       android:background="@color/barcolor"
       android:text="Anatomy"
       android:textColor="@color/white"
       android:gravity="center"
       android:paddingVertical="20dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:id="@+id/past_year_exam"
       android:layout_height="wrap_content"></TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/past_year_exam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/rec_past_eams"
        android:layout_height="wrap_content"
    />

</androidx.constraintlayout.widget.ConstraintLayout>