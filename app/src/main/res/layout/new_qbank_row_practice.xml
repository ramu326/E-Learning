<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:layout_marginVertical="20dp"
    android:layout_marginHorizontal="16dp"
    android:paddingVertical="24dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"
    android:outlineAmbientShadowColor="@color/black"
    android:background="@drawable/card_back"
    android:backgroundTint="@color/white"
    android:layout_marginLeft="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:id="@+id/linear_layout"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:id="@+id/iv_sub_image"
            android:background="@drawable/new_qbank_prac"></ImageView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BookmarkPracitce"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:layout_marginLeft="32dp"
                android:id="@+id/new_book_mark"
                android:letterSpacing="0.02"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_horizontal">
            </TextView>
            <View
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_marginLeft="32dp"
                android:layout_toRightOf="@+id/new_book_mark"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:id="@+id/view_one_ver"
                android:background="@color/lightblack"
                ></View>

            <TextView
                android:id="@+id/qbank_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="32dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/view_one_ver"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_horizontal"
                android:letterSpacing="0.02"
                android:text=" ErrorsPrcatice"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"></TextView>

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>