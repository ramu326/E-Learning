<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="start|center_vertical"
            android:layout_marginHorizontal="16dp"
            android:background="@color/white"
            android:layout_height="60dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mrl_back"
                android:layout_alignParentLeft="true"
                android:background="@drawable/ic_back"
                android:backgroundTint="@color/black"
               ></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/mrl_back"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginLeft="28dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#036e75"
                android:text="Morning Rounds"></TextView>

        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_mrl_image"
                android:layout_marginVertical="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/home_image"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/iv_mrl_image"
                android:fontFamily="@font/roboto_bold"
                android:textAlignment="textStart"
                android:gravity="start"
                android:id="@+id/tv_mrl_title"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:text="This guide to the letters that come after a doctor's title will help you determine"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_mrl_title"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="textStart"
                android:gravity="start"
                android:id="@+id/tv_mrl_time"
                android:textSize="12sp"
                android:drawableLeft="@drawable/ic_time"
                android:text="20Mins Ago"
                android:textColor="@color/lightblack"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_width="wrap_content"
               android:layout_toRightOf="@id/tv_mrl_time"
                android:layout_below="@id/tv_mrl_title"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="textStart"
                android:gravity="start"
                android:id="@+id/tv_mrl_day"
                android:textSize="12sp"
                android:drawableLeft="@drawable/dot"
                android:text="  2days Ago"
                android:textColor="@color/lightblack"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_mrl_day"
                android:fontFamily="@font/roboto_bold"
                android:textAlignment="textStart"
                android:layout_alignParentLeft="true"
                android:gravity="start"
                android:id="@+id/tv_mrl_sub_name"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:text="@string/obstetrics_gynaecology"
                android:textColor="@color/barcolor"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_mrl_day"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="textStart"
                android:layout_alignParentRight="true"
                android:gravity="start"
                android:id="@+id/tv_mrl_doct_name"
                android:textSize="12sp"
                android:text="Dr.Srikanth"
                android:textColor="@color/black"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_mrl_sub_name"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="textStart"
                android:gravity="start"
                android:drawableLeft="@drawable/ic_like"
                android:id="@+id/tv_mrl_likes"
                android:textSize="12sp"
                android:text="  999 Likes"
                android:textColor="@color/black"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_mrl_sub_name"
                android:fontFamily="@font/roboto_regular"
                android:layout_toRightOf="@id/tv_mrl_likes"
                android:textAlignment="textStart"
                android:gravity="start"
                android:drawableLeft="@drawable/ic_case_sheet"
                android:id="@+id/tv_mrl_sheet"
                android:textSize="12sp"
                android:text=" Case Sheet"
                android:textColor="@color/black"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_mrl_sub_name"
                android:fontFamily="@font/roboto_regular"
                android:layout_toRightOf="@id/tv_mrl_sheet"
                android:textAlignment="textStart"
                android:gravity="start"
                android:drawableLeft="@drawable/ic_share"
                android:id="@+id/tv_mrl_share"
                android:textSize="12sp"
                android:text="  share"
                android:textColor="@color/black"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="12dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#036e75"
                android:text="similar Morning Rounds"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#036e75"
                android:text="All Subjects"></TextView>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>