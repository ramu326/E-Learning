<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/icards_corners_shapes"
    android:layout_marginTop="12dp"
    android:paddingVertical="20dp"
    android:layout_marginHorizontal="12dp"
    android:id="@+id/cons_icards_bookmarks_audio"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_icards_audio_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:adjustViewBounds="true"
        android:src="@drawable/microscope"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/tv_text_audio_anatomy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Anatomy"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/iv_icards_audio_image"
        app:layout_constraintTop_toTopOf="parent"></TextView>


    <ImageView
        android:layout_width="20dp"
        app:layout_constraintStart_toStartOf="@id/tv_text_audio_anatomy"
        app:layout_constraintTop_toBottomOf="@id/tv_text_audio_anatomy"
        android:id="@+id/music"
        android:src="@drawable/ic_bookmark"
        android:layout_height="20dp"
        app:tint="#979797"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:fontFamily="@font/roboto_regular"
        android:text="14 Audios"
        android:id="@+id/icards_audio"
        android:textAllCaps="false"
        android:textColor="#8c8c8c"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/music"
        app:layout_constraintTop_toBottomOf="@id/tv_text_audio_anatomy"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>