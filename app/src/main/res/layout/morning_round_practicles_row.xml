<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:id="@+id/constraint_morning_round_dec_practical"
    android:paddingVertical="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/morning_round_image"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/news_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Examination of CNS"
        android:textAllCaps="false"
        android:id="@+id/morning_round_topic_name"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/morning_round_image"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_pause"
        android:id="@+id/morning_round_pause"
        app:layout_constraintBottom_toBottomOf="@+id/morning_round_major_case"
        app:layout_constraintStart_toStartOf="@id/morning_round_topic_name"
        app:layout_constraintTop_toBottomOf="@id/morning_round_topic_name"
        app:tint="@color/orange"></ImageView>

    <TextView
        android:id="@+id/morning_round_major_case"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:fontFamily="@font/roboto_regular"
        android:text="General medicine"
        android:textColor="#979797"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/morning_round_pause"
        app:layout_constraintTop_toBottomOf="@id/morning_round_topic_name"
        app:layout_constraintTop_toTopOf="@id/morning_round_pause"></TextView>

    <ImageView
        android:id="@+id/morning_plain_star"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:src="@drawable/plain_start"
        app:layout_constraintStart_toEndOf="@id/morning_round_major_case"
        app:layout_constraintTop_toBottomOf="@id/morning_round_topic_name"
        app:layout_constraintBottom_toBottomOf="@id/morning_round_major_case"
        app:layout_constraintTop_toTopOf="@id/morning_round_pause"
        app:tint="@color/orange"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="5.0"
        android:textAllCaps="false"
        android:textColor="#b4b4b4"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/morning_round_major_case"
        app:layout_constraintStart_toEndOf="@id/morning_plain_star"
        app:layout_constraintTop_toTopOf="@id/morning_round_major_case"></TextView>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:src="@drawable/ic_bookmark"
        app:layout_constraintBottom_toBottomOf="@id/morning_round_major_case"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/morning_round_major_case"
        app:tint="@color/lightblack"></ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>