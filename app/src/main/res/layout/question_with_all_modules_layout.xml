                    android:paddingVertical="4dp"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:shadowColor="@color/black"
                    android:layout_height="wrap_content"
                    ></TextView>
            </LinearLayout>
