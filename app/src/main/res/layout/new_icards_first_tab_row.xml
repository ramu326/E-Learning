<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"
    android:outlineAmbientShadowColor="@color/black"
    android:background="@drawable/card_back"
    android:backgroundTint="@color/white"
    android:layout_marginLeft="12dp"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="24dp"
    android:paddingBottom="8dp"
    android:layout_gravity="center"
    android:id="@+id/ll_subject_topic"
    android:background="@drawable/card_play_btn"
    android:backgroundTint="@color/white">


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/barcolor"
        android:background="@drawable/ic_directions_walk_24"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anatomy"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:textColor="#333333"
        android:textStyle="normal"
        android:fontFamily="@font/roboto_regular"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300 cards"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:textColor="#999999"
        android:textStyle="normal"
        android:fontFamily="@font/roboto_regular"></TextView>
</LinearLayout>

