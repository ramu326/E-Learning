<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="12dp"
    android:background="@drawable/black_line_shape"
    android:paddingBottom="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_dr_wall1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_dr_wall"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/drwall"></ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_video_view"
            app:tint="@color/barcolor"></ImageView>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/topic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Breast-case discussion"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/iv_dr_wall1"
        app:layout_constraintStart_toStartOf="@id/iv_dr_wall1"
        app:layout_constraintTop_toBottomOf="@id/iv_dr_wall1"
        tools:ignore="RtlCompat"></TextView>

    <TextView
        android:id="@+id/tv_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/plain_start"
        android:drawableTint="@color/orange"
        android:fontFamily="@font/poppins_regular"
        android:text=" 5.0"
        android:textAllCaps="false"
        android:textColor="#999999"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/iv_dr_wall1"
        app:layout_constraintTop_toBottomOf="@+id/topic"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:drawableLeft="@drawable/ic_dot"
        android:drawableTint="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:text=" 48mins"
        android:textAllCaps="false"
        android:textColor="#999999"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_star"
        app:layout_constraintStart_toEndOf="@id/tv_star"
        app:layout_constraintTop_toTopOf="@id/tv_star"></TextView>

    <TextView
        android:id="@+id/topic_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#f0f8fd"
        android:fontFamily="@font/poppins_regular"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:text="Morning Rounds"
        android:textColor="#858a8e"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_star"
        app:layout_constraintTop_toBottomOf="@id/tv_star"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>