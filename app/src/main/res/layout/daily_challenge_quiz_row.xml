<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/start_resume_bg_one"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="15dp"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="40dp"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="18-09-2020"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:id="@+id/tv_srl_candidate"
                android:textAllCaps="false"
                android:background="@drawable/edit_bg"
                android:textColor="@color/black"
                android:textSize="14sp">

            </TextView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Score:"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:textAllCaps="false"
                android:layout_toLeftOf="@id/tv_srl_scrore"
                android:textColor="@color/barcolor"
                android:textSize="14sp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="5/6 Correct"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_srl_scrore"
                android:textAllCaps="false"
                android:textColor="@color/barcolor"
                android:textSize="16sp">

            </TextView>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="40dp"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Topics"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:id="@+id/tv_srl_can"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp">

            </TextView>



            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="5 BookMarks"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@drawable/view_sol_bg_bt"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:textColor="@color/barcolor"
                android:textSize="14sp">

            </TextView>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="1."
                android:gravity="start"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="14sp">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginLeft="5dp"
                android:text="This is the one options ?"
                android:gravity="start"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="16sp">

            </TextView>
            <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="20dp"
                android:layout_height="20dp"
                android:src="@drawable/plus">

            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="2."
                android:gravity="start"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="14sp">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginLeft="5dp"
                android:text="This is the one options ?"
                android:gravity="start"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="16sp">

            </TextView>
            <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="20dp"
                android:layout_height="20dp"
                android:src="@drawable/plus">

            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="3."
                android:gravity="start"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="14sp">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginLeft="5dp"
                android:text="This is the one options ?"
                android:gravity="start"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="16sp">

            </TextView>+
            <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="20dp"
                android:layout_height="20dp"
                android:src="@drawable/plus">

            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="4."
                android:gravity="start"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="14sp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginLeft="5dp"
                android:text="This is the one options ?"
                android:gravity="start"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>
            <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="20dp"
                android:layout_height="20dp"
                android:src="@drawable/plus"></ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="16dp"
            android:text="Review"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/reset_bg_bt"
            android:textAllCaps="false"
            android:layout_alignParentRight="true"
            android:textColor="@color/green"
            android:textSize="14sp"></TextView>
    </LinearLayout>

</LinearLayout>