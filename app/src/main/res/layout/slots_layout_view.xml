<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    
    <VideoView
        android:layout_width="match_parent"
        android:id="@+id/slv_videos"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </VideoView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/iv_slv_more"
        android:padding="4dp"
        android:alpha="0.7"
        android:layout_marginRight="12dp"
        android:src="@drawable/ic_arrow_down"
        android:background="@drawable/cirle_shape"
        android:backgroundTint="@color/lightblack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="8dp"
        android:id="@+id/ll_slv_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:text="Anatomy head and neck class video anil Ramu "
            android:textColor="@color/white"
            android:textSize="16sp"
            android:id="@+id/tv_slv_title"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:shadowDx="12"
            android:layout_centerVertical="true"
            android:shadowDy="14"
            android:layout_marginHorizontal="8dp"
            android:shadowRadius="8"
            android:layout_toRightOf="@id/slots_book_matks"
            android:layout_toLeftOf="@id/slots_share"
            android:singleLine="true"
            android:layout_gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:shadowColor="@color/lightblack"
            android:textAllCaps="false"
            android:layout_height="wrap_content">
        </TextView>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="36dp"
                android:adjustViewBounds="true"
                android:alpha="0.7"
                android:id="@+id/slots_book_matks"
                android:background="@drawable/bookmark_white"
                android:layout_alignParentLeft="true"></ImageView>
            <ImageView
                android:layout_width="36dp"
                android:layout_height="32dp"
                android:adjustViewBounds="true"
                android:alpha="0.7"

                android:id="@+id/slots_share"
                android:background="@drawable/share_white"
                android:layout_alignParentRight="true"></ImageView>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>