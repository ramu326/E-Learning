<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="16dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_new_sub_go_qutions_module"
            android:layout_marginHorizontal="16dp"
            android:layout_gravity="center"
            android:paddingVertical="8dp"
            android:gravity="start|center"
            android:background="@drawable/ana_pb_bg"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="37dp"
                android:layout_height="46dp"
                android:layout_marginTop="6dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:id="@+id/learn_subjects_sub_tpoics_learn_image"
                android:background="@drawable/allqbank">

            </ImageView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="General Anatomy"
                    android:layout_alignParentLeft="true"
                    android:textAllCaps="false"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/roboto_medium"
                    android:id="@+id/learn_subjects_sub_tpoics_sub_with_topic"
                    android:textSize="16dp"
                    android:textColor="#333333"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qusetions :"
                    android:id="@+id/tv_new_question"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentLeft="true"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_below="@id/learn_subjects_sub_tpoics_sub_with_topic"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:gravity="center_horizontal"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="124"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/tv_new_question"
                    android:id="@+id/tv_new_question_nub"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="12dp"
                    android:layout_below="@id/learn_subjects_sub_tpoics_sub_with_topic"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textColor="#999999"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 5.0"
                    android:id="@+id/tv_new_question_star"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/plain_start"
                    android:drawableTint="#808080"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/tv_new_question_nub"
                    android:layout_below="@id/learn_subjects_sub_tpoics_sub_with_topic"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textColor="#808080"></TextView>

            </RelativeLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="80dp"
            android:background="#cccccc"
            android:layout_height="0.4dp"></View>

    </LinearLayout>

</LinearLayout>