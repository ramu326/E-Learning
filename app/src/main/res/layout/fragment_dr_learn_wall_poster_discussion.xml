<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ededed"
    tools:context=".Fragments.WallPosterGridfFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:paddingVertical="20dp"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:background="@color/barcolor">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wall posters"
            android:textAllCaps="true"
            android:gravity="center"
            android:fontFamily="@font/roboto_medium"
            android:textSize="20sp"
            android:textColor="@color/black"></TextView>
    </androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        android:outlineAmbientShadowColor="@color/black"
        android:background="@drawable/card_back"
        android:backgroundTint="#f2f2f2">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fr_dr_learn_wall_poster_grid_subject"></androidx.recyclerview.widget.RecyclerView>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:id="@+id/fr_dr_learn_wall_poster_grid_image"></androidx.recyclerview.widget.RecyclerView>
</LinearLayout>