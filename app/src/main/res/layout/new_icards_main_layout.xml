<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Pre clinicals"
    android:layout_marginTop="42dp"
    android:layout_marginLeft="16dp"
    android:textColor="#4d4d4d"
    android:fontFamily="@font/roboto_medium"
    android:textAllCaps="true"
    android:textSize="16sp"
    ></TextView>
        <View
            android:layout_width="30dp"
            android:layout_height="3dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:background="#4d4d4d"></View>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/rec_pre_clinicals"></androidx.recyclerview.widget.RecyclerView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/rec_pre_clinicals_sub_topic"></androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Para clinicals"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="16dp"
        android:textColor="#4d4d4d"
        android:fontFamily="@font/roboto_medium"
        android:textAllCaps="true"
        android:textSize="16sp"
        ></TextView>
        <View
            android:layout_width="30dp"
            android:layout_height="3dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:background="#4d4d4d"></View>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/rec_para_clinicals"></androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clinicals(prof3)"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="42dp"
            android:textColor="#4d4d4d"
            android:fontFamily="@font/roboto_medium"
            android:textAllCaps="true"
            android:textSize="16sp"
            ></TextView>
        <View
            android:layout_width="30dp"
            android:layout_height="3dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:background="#4d4d4d"></View>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_proof_three_clinicals"
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clinicals(prof4)"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="42dp"
            android:textColor="#4d4d4d"
            android:fontFamily="@font/roboto_medium"
            android:textAllCaps="true"
            android:textSize="16sp"
            ></TextView>
        <View
            android:layout_width="30dp"
            android:layout_height="3dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:background="@color/lightblack"></View>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/rec_proof_four_clinicals"></androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minor Subjects"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="42dp"
            android:textColor="#4d4d4d"
            android:fontFamily="@font/roboto_medium"
            android:textAllCaps="true"
            android:textSize="16sp"></TextView>
        <View
            android:layout_width="30dp"
            android:layout_height="3dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:background="#4d4d4d"></View>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content"
            android:id="@+id/rec_proof_minor_sub"></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</ScrollView>