<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/class_room_gradient"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Adapters.DrLearnTabsFragment">
   <TextView
       android:id="@+id/icards_name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:text="Icrads"
       android:layout_marginTop="24dp"
       android:textAlignment="center"
       android:textAllCaps="true"
       android:fontFamily="@font/yantramanav_medium"
       android:textColor="@color/black"
       android:textSize="24sp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"></TextView>
   <com.google.android.material.tabs.TabLayout
       android:id="@+id/fragment_icard_tab_layout"
       android:layout_width="match_parent"
       android:layout_height="45dp"
       android:layout_marginHorizontal="12dp"
       android:layout_marginBottom="16dp"
       android:layout_marginTop="24dp"
       android:background="@drawable/dr_second_tab_bg"
       android:scrollbars="none"
       app:layout_constraintTop_toBottomOf="@id/icards_name"
       app:layout_constraintStart_toStartOf="parent"
       app:tabRippleColor="@android:color/transparent"
       app:popupTheme="@style/Theme.Design.NoActionBar"
       app:tabIndicator="@drawable/dr_second_tab_selct"
       app:tabIndicatorColor="@color/white"
       app:tabIndicatorGravity="stretch"
       app:tabIndicatorHeight="0dp"
       app:tabMode="auto"
       app:tabSelectedTextColor="@color/black"
       app:tabTextAppearance="@style/MineCustomTabText"
       app:tabTextColor="#2c8587"
       app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

   </com.google.android.material.tabs.TabLayout>
   <androidx.viewpager2.widget.ViewPager2
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@+id/fragment_icard_tab_layout"
       app:layout_constraintStart_toStartOf="parent"
       android:id="@+id/fragment_icard_view_pager"
      android:layout_marginTop="16dp"
       app:layout_behavior="@string/appbar_scrolling_view_behavior">

   </androidx.viewpager2.widget.ViewPager2>

</androidx.constraintlayout.widget.ConstraintLayout>