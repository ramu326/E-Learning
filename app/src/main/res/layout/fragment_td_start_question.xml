<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_marginTop="12dp"
       android:layout_marginHorizontal="16dp"
       android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/roboto_regular"
    android:text="1/"
    android:layout_centerInParent="true"
    android:id="@+id/tv_nub"
    android:layout_alignParentLeft="true"
    android:paddingVertical="12dp"
    android:textColor="@color/black"
    android:textSize="16sp"></TextView>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="@font/roboto_regular"
           android:text="30"
           android:layout_centerInParent="true"
           android:id="@+id/tv_total_ques"
           android:layout_toRightOf="@id/tv_nub"
           android:paddingVertical="12dp"
           android:textColor="@color/black"
           android:textSize="16sp"></TextView>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="@font/roboto_regular"
           android:text="240 mins"
           android:textAllCaps="true"
           android:id="@+id/tv_total_mins"
          android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           android:paddingVertical="12dp"
           android:textColor="@color/black"
           android:textSize="16sp"></TextView>
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:backgroundTint="@color/black"
           android:id="@+id/fr_sq_ans_sheet"
           android:layout_alignParentRight="true"
           android:layout_centerInParent="true"
           android:background="@drawable/menu_style"></ImageView>
   </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:textSize="20sp"
        android:layout_marginHorizontal="16dp"
        android:textAlignment="textStart"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:text="@string/which_of_the_following_is_an_a_typical_vitamin"
        card_view:ignore="RtlCompat"></TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:paddingVertical="12dp"
            app:cardElevation="10dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/card_back"
            android:foreground="?android:attr/selectableItemBackground"
            android:outlineAmbientShadowColor="@color/black"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/tv_tq_op_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/roboto_regular"
                    android:text="A."
                    android:textAllCaps="false"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/tv_tq_op_a"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Vitamin B1(Nacin)"
                    android:textAllCaps="false"
                    android:textSize="14sp"></TextView>




            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="10dp"
            android:paddingVertical="12dp"
            app:cardElevation="10dp"
            android:background="@drawable/card_back"
            android:foreground="?android:attr/selectableItemBackground"
            android:outlineAmbientShadowColor="@color/black"
            app:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/tv_tq_op_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/roboto_regular"
                    android:text="B."
                    android:textAllCaps="false"

                    android:textSize="14sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/tv_tq_op_b"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Vitamin B1(Nacin)"
                    android:textAllCaps="false"
                    android:textSize="14sp"></TextView>



            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/card_back"
            android:foreground="?android:attr/selectableItemBackground"
            android:outlineAmbientShadowColor="@color/black"
            app:cardCornerRadius="8dp"
            android:layout_marginVertical="10dp"
            android:paddingVertical="12dp"
            app:cardElevation="10dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/tv_tq_op_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/roboto_regular"
                    android:text="C."
                    android:textAllCaps="false"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/tv_tq_op_c"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Vitamin B1(Nacin)"
                    android:textAllCaps="false"
                    android:textSize="14sp"></TextView>



            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/card_back"
            android:foreground="?android:attr/selectableItemBackground"
            android:outlineAmbientShadowColor="@color/black"
            app:cardCornerRadius="8dp"
            android:layout_marginVertical="10dp"
            android:paddingVertical="12dp"
            app:cardElevation="10dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/tv_tq_op_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/roboto_regular"
                    android:text="D."
                    android:textAllCaps="false"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/tv_tq_op_d"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Vitamin B1(Nacin)"
                    android:textAllCaps="false"
                    android:textSize="14sp"></TextView>



            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:padding="6dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_arrow_back"
            android:layout_height="wrap_content"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark"
            android:layout_marginLeft="24dp"
            android:layout_gravity="center"
            android:paddingHorizontal="32dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_bg_white"
            android:backgroundTint="@color/barcolor"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:textSize="12sp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:paddingHorizontal="32dp"
            android:background="@drawable/btn_bg_white"
            android:backgroundTint="@color/barcolor"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="12sp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:visibility="gone"
            android:paddingHorizontal="32dp"
            android:background="@drawable/btn_bg_white"
            android:backgroundTint="@color/barcolor"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:textSize="12sp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:paddingHorizontal="32dp"
            android:background="@drawable/btn_bg_white"
            android:backgroundTint="@color/barcolor"></TextView>
    </LinearLayout>


</LinearLayout>