<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="1. Which of the following is vitamin A?"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:paddingHorizontal="12dp"
        android:layout_marginHorizontal="12dp"
        android:fontFamily="@font/roboto_regular"></TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  00:00sec"
            android:textAllCaps="false"
            android:textColor="@color/orange"
            android:textSize="12sp"
            android:id="@+id/tv_discussion_exp_time"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/ic_time"
            android:drawableTint="@color/black"
            android:paddingHorizontal="12dp"
            android:fontFamily="@font/roboto_regular"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginLeft="12dp"
            android:textColor="#cccccc"
            android:textSize="12sp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/tv_discussion_exp_time"
            android:text="Anatomy"
            android:id="@+id/tv_discussion_exp_subject"
            android:fontFamily="@font/roboto_regular"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginLeft="24dp"
            android:paddingHorizontal="16dp"
            android:textColor="@color/green"
            android:textSize="12sp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/tv_discussion_exp_subject"
            android:text="Corrcet"
            android:id="@+id/tv_discussion_exp_correct"
            android:fontFamily="@font/roboto_regular"></TextView>

    </RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="0.05dp"
    android:layout_marginTop="12dp"
    android:layout_marginHorizontal="16dp"
    android:background="#dedede"></View>
</LinearLayout>