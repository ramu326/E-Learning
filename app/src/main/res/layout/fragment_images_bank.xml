    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".Fragments.ImagesBankFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/class_room_gradient"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/image_bank_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/black"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:text="V i p"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:fontFamily="@font/yantramanav_medium"
            android:textAllCaps="true"
            android:id="@+id/tv_image_bank"
            app:layout_constraintEnd_toStartOf="@+id/ib_book_mark"
            app:layout_constraintStart_toEndOf="@id/image_bank_back"
            app:layout_constraintTop_toTopOf="@id/image_bank_back"
            app:layout_constraintBottom_toBottomOf="@id/image_bank_back"
            android:layout_height="wrap_content"></TextView>
<TextView
    android:layout_width="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/tv_image_bank"
    app:layout_constraintStart_toStartOf="@id/tv_image_bank"
    app:layout_constraintEnd_toEndOf="@id/tv_image_bank"
    android:text="Visually imaging preparation"
    android:textAllCaps="false"
    android:id="@+id/tv_vip"
    android:textColor="@color/white"
    android:textSize="12sp"
    android:fontFamily="@font/yantramanav"
    android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/tv_videos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/plain_start"
            android:fontFamily="@font/yantramanav"
            android:text=" Images 36"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tv_vip"
            app:layout_constraintTop_toBottomOf="@id/tv_vip"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:drawableLeft="@drawable/plain_start"
            android:fontFamily="@font/yantramanav"
            android:text=" Videos 21"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_videos"
            app:layout_constraintEnd_toEndOf="@id/tv_vip"
            app:layout_constraintStart_toEndOf="@+id/tv_videos"
            app:layout_constraintTop_toTopOf="@id/tv_videos"></TextView>
        <ImageView
            android:id="@+id/ib_book_mark"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/bookmark"
            app:layout_constraintBottom_toBottomOf="@id/tv_image_bank"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_image_bank"></ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>
