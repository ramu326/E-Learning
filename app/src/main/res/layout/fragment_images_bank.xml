<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ededed"
    tools:context=".Fragments.ImagesBankFragment">
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_marginTop="12dp"
    android:layout_height="wrap_content"
    android:id="@+id/imagebank_sub_rec"></androidx.recyclerview.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:text="Bookmark "
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="14sp"
            android:drawableLeft="@drawable/ic_bookmark"
            android:textColor="@color/barcolor"
            android:background="@drawable/book_mark"
            android:layout_alignParentLeft="true"></TextView>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/gridview"></ImageView>
    </RelativeLayout>
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/image_bank_rec"></androidx.recyclerview.widget.RecyclerView>
</LinearLayout>