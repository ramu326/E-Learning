<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="4dp"
    android:layout_marginBottom="12dp"
    android:layout_gravity="center"

    android:id="@+id/new_learn_video_card_view"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_grid_icard_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/anatomy"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:layout_width="wrap_content"
        android:text="Anatomy"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:id="@+id/tv_grid_text"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintTop_toBottomOf="@id/iv_grid_icard_image"
        app:layout_constraintStart_toStartOf="@id/iv_grid_icard_image"
        app:layout_constraintEnd_toEndOf="@id/iv_grid_icard_image"
        android:layout_height="wrap_content"></TextView>




</androidx.constraintlayout.widget.ConstraintLayout>