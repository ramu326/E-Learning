<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/ll_srtdthree"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/start_resume_bg_three"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_srtdthree_test_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.9"
                android:gravity="start"
                android:text="Pre-clinical grand test"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/tv_srtdthree_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_play_arrow"
                android:gravity="right"
                android:text="Start"
                android:textAllCaps="true"
                android:textColor="@color/barcolor"
                android:textSize="14sp"
                android:textStyle="normal"
                android:visibility="visible"></TextView>
            <TextView
                android:id="@+id/tv_srtdthree_resume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_play_arrow"
                android:gravity="right"
                android:text="resume"
                android:textAllCaps="true"
                android:textColor="@color/barcolor"
                android:textSize="14sp"
                android:textStyle="normal"
                android:visibility="gone"></TextView>

            <TextView
                android:id="@+id/tv_srtdthree_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_play_arrow"
                android:gravity="right"
                android:text="review"
                android:textAllCaps="true"
                android:textColor="@color/barcolor"
                android:textSize="14sp"
                android:textStyle="normal"
                android:visibility="gone"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_srtdthree_mcqs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.3"
                android:gravity="start"
                android:text="150 MCQ's"
                android:textColor="@color/lightblack"
                android:textSize="16sp"></TextView>

            <TextView
                android:id="@+id/tv_srtdthree_mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="180Mins"
                android:textAllCaps="false"
                android:textColor="@color/lightblack"
                android:textSize="14sp"
                android:textStyle="normal"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="start"
                android:text="Syllabus: "
                android:textAllCaps="false"
                android:textColor="@color/lightblack"
                android:textSize="16sp"></TextView>

            <TextView
                android:id="@+id/tv_srtdthree_topics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Anatomy, Physiology, Biochemistry  "
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="normal"></TextView>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:layout_marginHorizontal="8dp"
            android:layout_below="@id/ll_rlr_marks_layout"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="View Solution"
                android:layout_alignParentLeft="true"
                android:id="@+id/tv_srl_view_solution"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@drawable/view_sol_bg_bt"
                android:textColor="@color/barcolor"
                android:textSize="14sp"></TextView>



            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Reset"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginLeft="35dp"
                android:layout_toRightOf="@id/tv_srl_view_solution"
                android:background="@drawable/reset_bg_bt"
                android:textColor="@color/green"
                android:textSize="14sp"></TextView>



        </RelativeLayout>
    </LinearLayout>

</LinearLayout>