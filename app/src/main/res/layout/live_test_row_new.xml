<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="start"
    app:cardCornerRadius="8dp"
    android:paddingBottom="12dp"
    android:layout_marginBottom="12dp"
    app:cardElevation="4dp"
    android:layout_marginHorizontal="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"

        android:layout_marginHorizontal="8dp"
        android:id="@+id/linear_layout"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:background="@drawable/preimage"></ImageView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:id="@+id/relative"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 200"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/ic_like"
                android:textSize="14sp"
                android:id="@+id/new_tv_sub_likes"
                android:letterSpacing="0.02"
                android:textColor="#8c8c8c"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_horizontal">
            </TextView>
            <View
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:background="@color/lightblack"
                ></View>
            <TextView
                android:id="@+id/new_tv_sub_notify_me"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/ic_notification"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_horizontal"
                android:letterSpacing="0.02"
                android:text=" Notify Me"
                android:textAlignment="center"
                android:textColor="#8c8c8c"
                android:textSize="14sp"></TextView>
            <TextView
                android:id="@+id/new_tv_sub_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/ic_sheet"
                android:drawableTint="#8c8c8c"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_horizontal"
                android:letterSpacing="0.02"
                android:text=" Take Test"
                android:textAlignment="center"
                android:textColor="#8c8c8c"
                android:textSize="14sp"></TextView>

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>