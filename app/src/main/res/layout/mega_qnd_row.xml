<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_new_sub_go_qutions_module"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_child_row"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:src="@drawable/news_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/tv_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_medium"
        android:text="General Anatomy"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/iv_child_row"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <ImageView
        android:id="@+id/iv_pause_qnd"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_pause"
        app:layout_constraintStart_toEndOf="@id/iv_child_row"
        app:layout_constraintStart_toStartOf="@id/tv_child"
        app:layout_constraintTop_toBottomOf="@id/tv_child"
        app:tint="@color/orange"></ImageView>

    <TextView
        android:id="@+id/tv_qnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="QnD"
        android:textAllCaps="false"
        android:textColor="#979797"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/iv_pause_qnd"
        app:layout_constraintTop_toBottomOf="@id/tv_child"
        app:layout_constraintTop_toTopOf="@id/iv_pause_qnd"></TextView>

    <TextView
        android:id="@+id/tv_qnd_depart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="Anatomy"
        android:textAllCaps="false"
        android:textColor="#979797"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/tv_qnd"
        app:layout_constraintTop_toBottomOf="@id/tv_child"
        app:layout_constraintTop_toTopOf="@id/iv_pause_qnd"></TextView>

    <TextView
        android:id="@+id/tv_child_video_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:drawableLeft="@drawable/plain_start"
        android:drawableTint="@color/orange"
        android:text=" 5.0"
        android:textColor="#999999"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tv_qnd_depart"
        app:layout_constraintTop_toBottomOf="@id/tv_child"
        app:layout_constraintTop_toTopOf="@id/iv_pause_qnd"></TextView>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:src="@drawable/ic_sub_bookmark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_pause_qnd"
        app:tint="#979797"></ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>