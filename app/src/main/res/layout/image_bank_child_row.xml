<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
             android:text="Bookmark 12"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="14sp"
            android:drawableLeft="@drawable/ic_bookmark"
            android:textColor="@color/barcolor"
            android:background="@drawable/book_mark"
            android:layout_alignParentLeft="true"></TextView>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/gridview"></ImageView>
    </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="36dp"
            android:layout_gravity="start"
            android:fontFamily="@font/roboto_regular"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="Image : 124377"></TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/image_body"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"></ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="36dp"
            android:layout_height="50dp">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="40dp"
                app:cardElevation="4dp"
                android:id="@+id/ibc_card_one"
                android:layout_marginLeft="8dp"
                app:cardCornerRadius="8dp"
                app:cardPreventCornerOverlap="false"
                android:backgroundTint="@color/white"
                android:background="@drawable/card_back"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes"
                    android:textColor="@color/barcolor"
                    android:textSize="14sp"
                    android:drawableRight="@drawable/ic_arrow_down"
                    android:drawableTint="@color/barcolor"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    ></TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="40dp"
                app:cardElevation="4dp"
                android:layout_marginLeft="32dp"
                android:id="@+id/ibc_card_two"
                android:layout_toRightOf="@id/ibc_card_one"
                app:cardCornerRadius="8dp"
                app:cardPreventCornerOverlap="false"
                android:backgroundTint="@color/white"
                android:background="@drawable/card_back"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Videos"
                    android:textColor="@color/barcolor"
                    android:textSize="14sp"
                    android:drawableLeft="@drawable/ic_play_arrow"
                    android:drawableTint="@color/barcolor"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    ></TextView>
            </androidx.cardview.widget.CardView>
            <ImageView
                android:layout_width="32dp"
                android:layout_marginLeft="36dp"
                android:layout_toRightOf="@id/ibc_card_two"
                android:src="@drawable/bookmark_white"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/lightblack"
                android:background="@drawable/cirle_shape"
                android:layout_height="32dp"></ImageView>
        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/constrint_dec"
            android:visibility="gone"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Anatomy structure"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"></TextView>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Description:"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/roboto_regular"
                android:text="what makes your screen responsive to all screen sizes is constraintLayout and how you use it, I agree that a large number of margin in dp will make your screen not responsive but small margins are recommended to use in google material design - it will actually give your app better look and prevent your views from being attached directly to the parent border."
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@id/textView"
                app:layout_constraintWidth_default="wrap"
                tools:ignore="MissingConstraints"></TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    android:id="@+id/contraint_video">
    <VideoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"></VideoView>
</androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>