<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="start"
        android:weightSum="3"
        android:id="@+id/ll_qwamr_all_sub"
        android:paddingBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_marginTop="20dp"
            android:layout_height="70dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="7dp"
            android:layout_gravity="center"
            android:id="@+id/iv_qwamr_subject_image"
          >

        </de.hdodenhof.circleimageview.CircleImageView>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.9"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Anatomy"
                android:id="@+id/tv_qwamr_subject"
                android:paddingLeft="4dp"
                android:fontFamily="@font/roboto_regular"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/iv_qwamr_qbank"
                    android:src="@drawable/allqbank">

                </ImageView>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="8dp"
                    android:indeterminate="false"
                    android:layout_marginTop="17dp"
                    android:maxWidth="300dp"
                    android:minWidth="300dp"
                    android:id="@+id/pb_qwamr_pbar"
                    android:progressTint="@color/antmycolor"
                    android:progressDrawable="@drawable/ana_pb_bg"
                    android:minHeight="38dp"
                    android:progress="40"
                    android:theme="@style/Progressbar.antmycolor" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center"
            android:layout_marginRight="3dp"
            android:layout_gravity="right|center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="28dp"
                android:id="@+id/iv_qwamr_stack"

                android:src="@drawable/anatomy">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="24dp"
                android:textColor="@color/black"
                android:id="@+id/tv_qwamr_tasks"

                android:layout_height="wrap_content"
                android:text="70/100">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:layout_marginLeft="20dp"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                android:text="@string/percent">

            </TextView>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:gravity="start"
        android:layout_marginLeft="30dp"
        android:paddingBottom="25dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="12sp"
            android:id="@+id/tv_qwamr_rating"
            android:fontFamily="@font/roboto_regular"
            android:drawableLeft="@drawable/ic_star_rating"
            android:text="4.5">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="12sp"
            android:id="@+id/tv_qwamr_bparctice"

            android:layout_marginLeft="35dp"
            android:paddingHorizontal="10dp"
            android:layout_gravity="center"
            android:background="@drawable/book_marks_tv_bg"
            android:text="Bookmarks Practise">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="12sp"
            android:id="@+id/tv_qwamr_berror"
            android:paddingHorizontal="10dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/book_marks_tv_bg"
            android:text="Practice Errors">
        </TextView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:background="@color/lightblack">

    </View>
    </LinearLayout>
</ScrollView>